#!/bin/bash

# Define API endpoint and output files
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
echo "Making API request to $API_URL..."
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > /tmp/status_code.txt

# Check the HTTP status code
HTTP_STATUS=$(cat /tmp/status_code.txt)

if [[ "$HTTP_STATUS" -eq 200 ]]; then
  echo "API request successful. Data saved to $OUTPUT_FILE."
else
  echo "API request failed with status code: $HTTP_STATUS." > "$ERROR_FILE"
  echo "Check your internet connection or the API URL." >> "$ERROR_FILE"
  echo "Error logged to $ERROR_FILE."
  rm -f "$OUTPUT_FILE" # Remove partial or empty output file if request fails
fi

# Clean up
rm -f /tmp/status_code.txt
